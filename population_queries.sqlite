SELECT COUNT(*)
FROM countries
WHERE continent = "Africa";

SELECT SUM(population)
FROM countries as c
JOIN population_years as py
  ON c.id = py.country_id
WHERE c.continent = "Oceania"
  AND py.year = 2005;

SELECT AVG(population)
FROM countries as c
JOIN population_years as py
  ON c.id = py.country_id
WHERE c.continent = "South America"
  AND py.year = 2003;

SELECT MIN(py.population),
  c.name, 
  c.continent,
  py.year
FROM countries as c
JOIN population_years as py
  ON c.id = py.country_id
WHERE py.year = 2007;

SELECT AVG(py.population),
  c.name, 
  c.continent
FROM countries as c
JOIN population_years as py
  ON c.id = py.country_id
WHERE c.name = "Poland";

SELECT SUM(py.population),
  c.continent
FROM countries as c
JOIN population_years as py
  ON c.id = py.country_id
WHERE py.year = 2010
GROUP BY c.continent;
